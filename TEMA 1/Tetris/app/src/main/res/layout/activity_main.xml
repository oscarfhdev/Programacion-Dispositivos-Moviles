<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/rectangulo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#CDDC39" />

    <Button
        android:id="@+id/btnArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangulo"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F44336"
        android:text="Arriba" />

    <Button
        android:id="@+id/btnAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnArriba"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#E91E63"
        android:text="Abajo" />


    <Button
        android:id="@+id/btnIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnArriba"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/btnArriba"
        android:backgroundTint="#4CAF50"
        android:text="Izquierda" />

    <Button
        android:id="@+id/btnDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnArriba"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btnArriba"
        android:backgroundTint="#03A9F4"
        android:text="Derecha" />

    <Button
        android:id="@+id/btnCambiarTamanio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAbajo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#009688"
        android:text="Cambiar TamaÃ±o" />


    <Button
        android:id="@+id/btnCambiarColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAbajo"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/btnCambiarTamanio"
        android:backgroundTint="#009688"
        android:text="Cambiar Color" />


</RelativeLayout>